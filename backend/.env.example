# 设置日志配置
DEBUG=True
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_PATH="/var/log/ipams/"

# 应用配置
FLASK_ENV=development
FLASK_APP=run.py
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# JWT配置
JWT_SECRET_KEY=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# 数据库配置
DATABASE_URI=mysql+pymysql://root:password@localhost/ipams
TEST_DATABASE_URI=mysql+pymysql://root:password@localhost/ipams_test

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_CAPTCHA_EXPIRE=3600

# 凭证加密配置
ENCRYPTION_KEY=your-encryption-key-here

# Ansible配置
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_TIMEOUT=30

# 采集任务配置
COLLECTION_MAX_CONCURRENT=5
COLLECTION_TIMEOUT=300

# 导出文件配置
EXPORT_FILE_EXPIRY=3600
